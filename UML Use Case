@startuml
skinparam packageStyle rectangle
actor Пользователь AS U
actor Менеджер AS M
actor Оператор AS O
actor Сотрудник AS E
actor Покупатель AS C

rectangle Интернет_магазин {

    E --> (Cмотреть заказы)
    E --> (Посмотреть заказ)

    U --> (Смотреть товары)
    U --> (Смотреть поставщиков)

    M ---> (Анализировать статистику)
    E --> (Войти в систему)

    C -> (Сделать заказ)
    C -> (Оплатить заказ)
    C -> (Узнать об изменении заказа)

    O --> (Посмотреть товар)
    O --> (Добавить товар)

    O -> (Добавить поставщика)
    O --> (Посмотреть поставщика)

    (Регистрация) .> (Войти в систему): extend
    (Аутентификация) ..> (Войти в систему) : extend

    (Cмотреть заказы) <... (Посмотреть заказ) : extend
    (Изменить заказ) .> (Посмотреть заказ) : extend
    (Посмотреть заказ) ...> (Аутентификация) : include

    (Изменить товар) .> (Посмотреть товар) : extend
    (Посмотреть товар) <.. (Удалить товар) : extend
    (Посмотреть товар) ...> (Добавить товар) : extend

    (Посмотреть поставщика) <.. (Изменить поставщика) : extend
    (Посмотреть поставщика) <.. (Удалить поставщика) : extend
    (Посмотреть поставщика) ..> (Добавить поставщика): extend
}

C -|> U
E -|> U
E <|-- M
E <|- O

@enduml
